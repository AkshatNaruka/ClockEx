{
    "manifest_version": 3,
    "name": "ClockEx",
    "version": "2.0",
    "description": "ClockEx is a simple clock extension that shows the current time and some other features for Procastinators.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
    },
    "icons": {
      "16": "Icon1.png",
      "48": "Icon2.png",
      "128": "clock.png"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": ["script.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  